<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_firstname_teamname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:paddingVertical="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_lastname_city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name" />

    <TextView
        android:id="@+id/tv_lastname_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:paddingVertical="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_firstname_teamname"
        app:layout_constraintEnd_toStartOf="@+id/tv_teamname_conference"
        app:layout_constraintStart_toEndOf="@+id/tv_firstname_teamname"
        app:layout_constraintTop_toTopOf="@+id/tv_firstname_teamname"
        tools:text="last name/city" />

    <TextView
        android:id="@+id/tv_teamname_conference"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_firstname_teamname"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
        app:layout_constraintStart_toEndOf="@+id/tv_lastname_city"
        app:layout_constraintTop_toTopOf="@+id/tv_firstname_teamname"
        tools:text="team/conference" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>